<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".title" %></h1>
    <h2>
      <%= t("home.page") %>
      <%= link_to t("home.message"), Settings.links.rails_tutorial.home_page %>
      <%= t("home.sample") %>
    </h2>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails-1-logo.png", alt: "Rails logo", width: "200px"),"https://rubyonrails.org/" %>
<% end %>
